<% provide(:title, 'Expenses') %>
<h1>Add expense</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@expense, url:expenses_new_path) do |f| %>
    	<%= render 'shared/error_messages' %>

      <%= f.label :amount %>
      <%= f.number_field :amount , class: 'form-control'%>

      <%= f.label :date %>
      <%= f.date_field :date, class: 'form-control', :value => Time.now.strftime('%m/%d/%y') %>

      <%= f.label :place %>
      <%= f.text_field :place, class: 'form-control' %>

      <%= f.label :category %>
      <%= f.text_field :category, class: 'form-control' %>
      <hr>
      <%= f.submit "Create expense", class: "btn btn-primary" %>
      
    <% end %>

  </div>
  </div>
