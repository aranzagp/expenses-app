<!DOCTYPE html>
<html>
  <head>
     <title><%= full_title(yield(:title)) %></title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag "https://www.gstatic.com/charts/loader.js" %>
  </head>

  <body>
    <script src="/assets/javascripts/jquery.js"></script>


    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle Navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to "expenses app", root_path , id: "logo" %>
        </div> <!-- end div class="navbar-header" -->
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to "Home",   root_path  %></li>
                <li> 
                  <a href="/expenses/new"> 
                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Expense
                  </a> 
                </li>
                <li> 
                  <a href="/incomes/new"> 
                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Income
                  </a> 
                </li>

                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">View <span class="caret"></span></a>
                  <ul class="dropdown-menu">
                    <li><a href="/expenses">All Expenses</a></li>
                    <li><a href="/incomes">All Incomes</a></li>
                    <li role="separator" class="divider"></li>
                    <li><a href="/categories">Categories</a></li>
                    <li role="separator" class="divider"></li>
                    <li><a href="#">Balance</a></li>
                  </ul>
                </li>
          </ul>
        </div> <!-- end div class="collapse navbar-collapse" -->
      </div> <!-- end div class="container" -->
    </div> <!-- end div class="navbar navbar-default navbar-fixed-top" -->

    <div class="container">
    	<% flash.each do |message_type, message| %>
        <%= content_tag(:div, message, class: "alert alert-#{message_type}") %>
      <% end %>
      <%= yield %>
      <%= debug(params) if Rails.env.development? %>
    </div>
  </body>
</html>
